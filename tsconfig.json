{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "nock",
      "@aws-sdk/types",
      "testing-library__jest-dom"
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@tests/*": [
        "./__tests__/*"
      ],
      "@cy/*": [
        "./cypress/*"
      ],
      "*": [
        "node_modules/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
