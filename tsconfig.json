{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "jest",
      "@cypress/react"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "*": [
        "node_modules/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}
